const workoutsData = <%= @workouts.to_json %>; // Assuming @workouts instance variable is set in the controller action

// Use the data to generate the chart
// Example using Chart.js:
const ctx = document.getElementById('workoutsChart').getContext('2d');
new Chart(ctx, {
  type: 'line',
  data: {
    labels: Object.keys(workoutsData),
    datasets: [
      {
        label: 'Workouts',
        data: Object.values(workoutsData),
        backgroundColor: 'rgba(75, 192, 192, 0.2)',
        borderColor: 'rgba(75, 192, 192, 1)',
        borderWidth: 1
      }
    ]
  },
  options: {
    // Configure chart options as needed
  }
});
